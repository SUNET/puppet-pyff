- when update:
    - load:<% @load.each do |elt| -%>
        - <%= elt %>
<% end -%>
    - break
- when request:
    - select
    - pipe:
        - when accept application/xml:
             - xslt:
                 stylesheet: tidy.xsl
             - first
             - finalize:
                cacheDuration: <%= @cacheDuration %>
                validUntil: <%= @validUntil %>
             - sign:
                 key: <%= @key %>
                 cert: <%= @cert %>
             - emit application/xml
             - break
        - when accept application/json:
             - xslt:
                 stylesheet: discojson.xsl
             - emit application/json:
             - break
